<?xml version="1.0" encoding="utf-8"?>
<test purpose="node selection">
  <policies>
    <policy name="functions">
      <addArg>test.xml</addArg>
    </policy>
    <default>
      <program>../../../samples/xgrep/xgrep</program>
    </default>
  </policies>
  <base type="pass">
    <arg>//ron/child::node()</arg>
    <output>&lt;?xgrep-match [test.xml]--------------------------------?&gt;
&lt;hermione/&gt;
&lt;?xgrep-match [test.xml]--------------------------------?&gt;
text
</output>
  </base>
  <base type="pass">
    <arg>//hermione/self::*[name()=&quot;hermione&quot;]</arg>
    <output>&lt;?xgrep-match [test.xml]--------------------------------?&gt;
&lt;hermione/&gt;
</output>
  </base>
  <base type="pass">
    <arg>//zvonimir/*[local-name()=&quot;whisky&quot;]</arg>
    <output>&lt;?xgrep-match [test.xml]--------------------------------?&gt;
&lt;optic:whisky xmlns:optic=&quot;urn:glasses:www.20-20.org&quot;/&gt;
</output>
  </base>
  <base type="pass">
    <arg>//zvonimir/*[namespace-uri()=&quot;urn:glasses:www.20-20.org&quot;]</arg>
    <output>Equality operator for given types not supported
</output>
  </base>
  <base type="pass">
    <arg>//irena/child::comment()</arg>
    <output>&lt;?xgrep-match [test.xml]--------------------------------?&gt;
&lt;!--This is a comment--&gt;
</output>
  </base>
</test>