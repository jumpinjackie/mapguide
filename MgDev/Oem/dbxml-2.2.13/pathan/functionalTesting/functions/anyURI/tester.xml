<?xml version="1.0" encoding="utf-8"?>
<test purpose="anyURI">
  <policies>
    <policy name="">
      <addArg>test.xml</addArg>
    </policy>
    <default>
      <program>../../../samples/evaluator/eval</program>
    </default>
  </policies>
  <base type="pass">
    <arg>resolve-uri(&quot;http://www.relbase.com&quot;)</arg>
    <output>http://www.relbase.com
</output>
  </base>
  <base type="pass">
    <arg>resolve-uri(&quot;relative.xml&quot;) </arg>
    <output>file://$PWD$/relative.xml
</output>
  </base>
  <base type="pass">
    <arg>resolve-uri(&quot;../../relative.xml&quot;, &quot;http://www.example.com/dir/path/&quot;) </arg>
    <output>http://www.example.com/relative.xml
</output>
  </base>
  <base type="pass">
    <arg>resolve-uri(&quot;../../functions/anyURI&quot;) </arg>
    <output>file://$PWD$
</output>
  </base>
  <base type="pass">
    <arg>resolve-uri(&quot;rel.xml&quot;, &quot;http://www.baseuri.com/&quot;)</arg>
    <output>http://www.baseuri.com/rel.xml
</output>
  </base>
  <base type="pass">
    <arg>resolve-uri(&quot;rel.xml&quot;, &quot;http://www.baseuri.com/hello.xml&quot;)</arg>
    <output>http://www.baseuri.com/rel.xml
</output>
  </base>
  <base type="pass">
    <arg>resolve-uri(&quot;http://www.relbase.com&quot;, &quot;http://www.baseuri.com/&quot;)</arg>
    <output>http://www.relbase.com
</output>
  </base>
  <base type="pass">
    <arg>resolve-uri(&quot;rel.com&quot;, &quot;badBase.com/&quot;)</arg>
    <output>Relative URI base argument to resolve-uri
</output>
  </base>
  <base type="pass">
    <arg>resolve-uri(&quot;&quot;)  </arg>
    <output>file://$PWD$/test.xml
</output>
  </base>
  <base type="pass">
    <arg>resolve-uri(&quot;&quot;, &quot;http://www.yahoo.com&quot;) </arg>
    <output>http://www.yahoo.com
</output>
  </base>
  <base type="pass">
    <arg>resolve-uri(&quot;mailto:gareth@decisionsoft.com&quot;)</arg>
    <output>mailto:gareth@decisionsoft.com
</output>
  </base>
  <base type="pass">
    <arg>resolve-uri(&quot;nfs://123.255.124.1:2049/some/file/path&quot;)</arg>
    <output>nfs://123.255.124.1:2049/some/file/path
</output>
  </base>
  <base type="pass">
    <arg>resolve-uri(&quot;hello.txt&quot;, &quot;relative.html&quot;)</arg>
    <output>Relative URI base argument to resolve-uri</output>
  </base>
  <base type="pass">
    <arg>resolve-uri(&quot;[&quot;)</arg>
    <output>Invalid argument to resolve-uri</output>
  </base>
</test>