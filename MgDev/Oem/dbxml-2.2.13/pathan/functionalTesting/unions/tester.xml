<?xml version="1.0" encoding="utf-8"?>
<test purpose="Choice based recursion">
  <policies>
    <policy name="seq">
      <addArg>-N</addArg>
      <addArg>xs</addArg>
      <addArg>http://www.w3.org/2001/XMLSchema</addArg>
      <addArg>test.xml</addArg>
    </policy>
    <default>
      <program>../../samples/evaluator/eval</program>
    </default>
  </policies>
  <base type="pass">
    <arg>data(/container/methodUsedToKillRasputin) instance of poison</arg>
    <output>true
</output>
  </base>
  <base type="pass">
    <arg>/container/methodUsedToKillRasputin instance of element(*,union.methodsUsedToKillRasputin)</arg>
    <output>true
</output>
  </base>
</test>