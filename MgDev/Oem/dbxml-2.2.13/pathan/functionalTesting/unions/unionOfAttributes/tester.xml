<?xml version="1.0" encoding="utf-8"?>
<test purpose="Unions of attributes">
  <policies>
    <policy name="seq">
      <addArg>-N</addArg>
      <addArg>xs</addArg>
      <addArg>http://www.w3.org/2001/XMLSchema</addArg>
      <addArg>test.xml</addArg>
    </policy>
    <default>
      <program>../../../samples/evaluator/eval</program>
    </default>
  </policies>
  <base type="pass">
    <arg>/container/friendlyPerson[2]</arg>
    <output>&lt;friendlyPerson&gt;2002-02-14&lt;/friendlyPerson&gt;
</output>
  </base>
  <base type="pass">
    <arg>data(/container/friendlyPerson[2]) instance of xs:date</arg>
    <output>true
</output>
  </base>
  <base type="pass">
    <arg>/container/friendlyPerson[2] instance of element(*, union.lotsOfTypes)</arg>
    <output>true
</output>
  </base>
  <base type="pass">
    <arg>/container/trueBlue</arg>
    <output>&lt;trueBlue anotherAttributeFriendlyPerson=&quot;Diamondback&quot; attributeFriendlyPerson=&quot;2002-11-11&quot;&gt;
    &lt;myGoodOldPal&gt;Victoria&lt;/myGoodOldPal&gt;
  &lt;/trueBlue&gt;
</output>
  </base>
  <base type="pass">
    <arg>/container/trueBlue/@attributeFriendlyPerson </arg>
    <output>{}attributeFriendlyPerson=&quot;2002-11-11&quot;
</output>
  </base>
  <base type="pass">
    <arg>/container/trueBlue/@anotherAttributeFriendlyPerson</arg>
    <output>{}anotherAttributeFriendlyPerson=&quot;Diamondback&quot;
</output>
  </base>
  <base type="pass">
    <arg>/container/trueBlue/@attributeFriendlyPerson instance of attribute()</arg>
    <output>true
</output>
  </base>
  <base type="pass">
    <arg>data(/container/trueBlue/@attributeFriendlyPerson) instance of xs:date</arg>
    <output>true
</output>
  </base>
  <base type="pass">
    <arg>data(/container/trueBlue/@anotherAttributeFriendlyPerson) instance of xs:string</arg>
    <output>true
</output>
  </base>
</test>