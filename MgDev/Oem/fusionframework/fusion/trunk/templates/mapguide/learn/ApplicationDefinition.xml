      <StatusText/>
      <Extension xsi:type="CustomContentType">
        <Template>{w} x {h} ({units})</Template>
        <Precision>2</Precision>
      </Extension>
    </Widget>

<!--                           -->
<!--          LEGEND           -->
<!--                           -->

    <Widget xsi:type="WidgetType">
