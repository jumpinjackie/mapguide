      <Extension xsi:type="CustomContentType">
        <!--DisplayUnits>meters</DisplayUnits-->
      </Extension>
      <ImageUrl>images/stdicons/icon_viewoptions.gif</ImageUrl>
      <ImageClass/>
      <Tooltip/>
      <Label>View Options</Label>
      <Disabled/>
