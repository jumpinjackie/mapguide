    </Widget>

<!--                           -->
<!--      CURSOR POSITION      -->
<!--                           -->

    <Widget xsi:type="WidgetType">
      <Name>CursorPosition</Name>
      <Type>CursorPosition</Type>
      <StatusText/>
      <Extension xsi:type="CustomContentType">
        <Template>x: {x} {units}, y: {y} {units}</Template>
        <Precision>4</Precision>
      </Extension>
    </Widget>

<!--                           -->
<!--      EDITABLE SCALE       -->
<!--                           -->

    <Widget xsi:type="WidgetType">
