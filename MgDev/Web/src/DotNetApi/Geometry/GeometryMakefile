
cleandebug:
  del /Q .\Mg*.cs
  del /Q .\*Constants.cs  
  del /Q .\*PINVOKE.cs    
  del /Q .\*Api.cs      
  if exist $(OUTDIR)\OSGeo.MapGuide.Geometry.netmodule del $(OUTDIR)\OSGeo.MapGuide.Geometry.netmodule    
  if exist $(OUTDIR)\OSGeo.MapGuide.Geometry.dll del $(OUTDIR)\OSGeo.MapGuide.Geometry.dll
  if exist $(OUTDIR)\OSGeo.MapGuide.Geometry.Temp.dll del $(OUTDIR)\OSGeo.MapGuide.Geometry.Temp.dll  
  if exist $(OUTDIR)\OSGeo.MapGuide.Geometry.pdb del $(OUTDIR)\OSGeo.MapGuide.Geometry.pdb

cleanrelease:
  del /Q .\Mg*.cs
  del /Q .\*Constants.cs  
  del /Q .\*PINVOKE.cs     
  del /Q .\*Api.cs    
  if exist $(OUTDIR)\OSGeo.MapGuide.Geometry.netmodule del $(OUTDIR)\OSGeo.MapGuide.Geometry.netmodule  
  if exist $(OUTDIR)\OSGeo.MapGuide.Geometry.dll del $(OUTDIR)\OSGeo.MapGuide.Geometry.dll
  if exist $(OUTDIR)\OSGeo.MapGuide.Geometry.pdb del $(OUTDIR)\OSGeo.MapGuide.Geometry.pdb

debug: $(OUTDIR)\OSGeo.MapGuide.Geometry.Temp.dll

release: $(OUTDIR)\OSGeo.MapGuide.Geometry.dll

$(OUTDIR)\OSGeo.MapGuide.Geometry.Temp.dll: 
  csc.exe /out:$(OUTDIR)\OSGeo.MapGuide.Geometry.netmodule /target:module /addmodule:$(OUTDIR)\OSGeo.MapGuide.Foundation.netmodule /debug+ /debug:full .\*.cs
  csc.exe /out:$(OUTDIR)\OSGeo.MapGuide.Geometry.dll /target:library /addmodule:$(OUTDIR)\OSGeo.MapGuide.Geometry.netmodule
  copy /y $(OUTDIR)\OSGeo.MapGuide.Geometry.dll $(OUTDIR)\OSGeo.MapGuide.Geometry.Temp.dll    

$(OUTDIR)\OSGeo.MapGuide.Geometry.dll: 
  csc.exe /out:$(OUTDIR)\OSGeo.MapGuide.Geometry.netmodule /target:module /addmodule:$(OUTDIR)\OSGeo.MapGuide.Foundation.netmodule .\*.cs
  csc.exe /out:$(OUTDIR)\OSGeo.MapGuide.Geometry.dll /target:library /addmodule:$(OUTDIR)\OSGeo.MapGuide.Geometry.netmodule