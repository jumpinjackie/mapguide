<?xml version="1.0" encoding="utf-8"?>
<test purpose="spec_expressions">
  <policies>
    <policy name="logical_exprs"/>
    <default>
      <program>../../../../samples/evaluator/eval</program>
    </default>
  </policies>
  <base type="pass">
    <arg>1 eq 1 and 2 eq 2</arg>
    <output>true
</output>
  </base>
  <base type="pass">
    <arg>1 eq 1 or 2 eq 3</arg>
    <output>true
</output>
  </base>
  <base type="pass">
    <arg>1 eq 2 and 3 idiv 0 = 1</arg>
    <output>false</output>
  </base>
  <base type="pass">
    <arg>1 eq 1 or 3 idiv 0 = 1</arg>
    <output>true</output>
  </base>
  <base type="pass">
    <arg>1 eq 1 and 3 idiv 0 = 1</arg>
    <output>Division by zero [err:FOAR0001]</output>
  </base>
  <base type="pass">
    <arg>1 eq 1 and 3 eq &quot;fred&quot;</arg>
    <output>Equality operator for given types not supported</output>
  </base>
</test>