            <ComponentRef Id="ServerSchemaComponent"/>
            <ComponentRef Id="ServerWfsComponent"/>
            <ComponentRef Id="ServerWmsComponent"/>
            <ComponentGroupRef Id="group_SRVBINFILES"/>
