# cmp $t $f > /dev/null 2>&1 ||
#     (echo "Building $f" && rm -f $f && cp $t $f && chmod 444 $f)
# 
# f=../build_windows/libdb.def
# (echo $msgw &&
#  echo &&
#  echo \
#  "DESCRIPTION	'Berkeley DB $DBXML_VERSION_MAJOR.$DBXML_VERSION_MINOR Library'" &&
#  echo &&
#  echo EXPORTS;
