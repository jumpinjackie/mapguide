<?xml version="1.0" encoding="utf-8"?>
<test purpose="policy-dependent expressions">
  <policies>
    <policy name="flexible">
      <addArg>-f</addArg>
      <addArg>../test.xml</addArg>
    </policy>
    <default>
      <program>../../../../samples/evaluator/eval</program>
    </default>
  </policies>
  <base type="pass">
    <arg>(1=1)=1 </arg>
    <output>true
</output>
  </base>
  <base type="pass">
    <arg>(1=1)=0 </arg>
    <output>false
</output>
  </base>
  <base type="pass">
    <arg>(1=1)&gt;1 </arg>
    <output>false
</output>
  </base>
  <base type="pass">
    <arg>(1=1)&lt;1 </arg>
    <output>false
</output>
  </base>
  <base type="fail">
    <arg>(1=1) eq 1  </arg>
    <output>true
</output>
  </base>
  <base type="fail">
    <arg>(1=1) eq 0  </arg>
    <output>false
</output>
  </base>
  <base type="fail">
    <arg>(1=1) gt 1  </arg>
    <output>false
</output>
  </base>
  <base type="fail">
    <arg>(1=1) lt 1  </arg>
    <output>false
</output>
  </base>
  <base type="pass">
    <arg>(1=1) and xs:boolean(&quot;true&quot;)</arg>
    <output>true
</output>
  </base>
  <base type="pass">
    <arg>(1=1) and false</arg>
    <output>false
</output>
  </base>
  <base type="pass">
    <arg>(1=1) and &quot;Hasselblad&quot;  </arg>
    <output>true
</output>
  </base>
  <base type="pass">
    <arg>(1=1) and &quot;&quot;  </arg>
    <output>false
</output>
  </base>
  <base type="pass">
    <arg>(1=1) and 1 </arg>
    <output>true
</output>
  </base>
  <base type="pass">
    <arg>(1=1) and 0 </arg>
    <output>false
</output>
  </base>
  <base type="pass">
    <arg>(1=1) and 42  </arg>
    <output>true
</output>
  </base>
  <base type="pass">
    <arg>(1=1) and -0  </arg>
    <output>false
</output>
  </base>
  <base type="pass">
    <arg>(1=1) and (42E0 mod 0)  </arg>
    <output>false
</output>
  </base>
  <base type="pass">
    <arg>(1=1) and 1.5e+17 </arg>
    <output>true
</output>
  </base>
  <base type="pass">
    <arg>(3,2)&gt;1 </arg>
    <output>true
</output>
  </base>
  <base type="fail">
    <arg>for $book in (//book) return $book/author eq &quot;Kennedy&quot;  </arg>
    <output>true
false
</output>
  </base>
</test>